@model DIPatternDemo.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Add Student Info</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
