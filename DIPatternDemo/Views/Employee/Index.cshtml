@model IEnumerable<DIPatternDemo.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee Details</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Eid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Esal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Eid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Esal)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Eid  }) |
                @Html.ActionLink("Details", "Details", new {  id=item.Eid  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Eid })
            </td>
        </tr>
}
    </tbody>
</table>
